@page
@model WebProject.Pages.Prestari.IndexModel

@{
    ViewData["Title"] = "Index";
}
<body class="services-page">

    <h1>Index</h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Prestare[0].Client)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prestare[0].Serviciu)
                </th>
                <th>
                    @Html.DisplayNameFor(model =>model.Prestare[0].Serviciu.Personal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prestare[0].DataPrestarii)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Prestare)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Serviciu.Nume)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem =>item.Serviciu.Personal.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataPrestarii)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>