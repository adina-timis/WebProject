@page
@model WebProject.Pages.Servicii.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Serviciu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Serviciu.ID" />
            <div class="form-group">
                <label asp-for="Serviciu.Nume" class="control-label"></label>
                <input asp-for="Serviciu.Nume" class="form-control" />
                <span asp-validation-for="Serviciu.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serviciu.PersonalID" class="control-label">Nume Personal</label>
                <input asp-for="Serviciu.PersonalID" class="form-control" />
                <span asp-validation-for="Serviciu.PersonalID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serviciu.Pret" class="control-label"></label>
                <input asp-for="Serviciu.Pret" class="form-control" />
                <span asp-validation-for="Serviciu.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serviciu.MarcaID" class="control-label">Nume Marca</label>
                <select asp-for="Serviciu.MarcaID" class="form-control" asp-items="ViewBag.MarcaID">
                </select>
                <span asp-validation-for="Serviciu.MarcaID" class="text-danger"></span>
            </div>
            
                    <div class="form-group">
                <div class="table">
                    <table>
                       <tr>
                         @{
                            int cnt = 0;
                            foreach (var cat in Model.AssignedCategoryDataList)
                            {
                            if (cnt++ % 3 == 0)
                            {
                            @:</tr><tr>
                            }
                            @:<td>
                                <input type="checkbox"
                                    name="selectedCategories"
                                    value="@cat.CategorieID"
                                    @(Html.Raw(cat.Asignat ? "checked=\"checked\"" : "")) />
                                @cat.CategorieID @: @cat.Nume
                            @:</td>
                         }
                       @:</tr>
                       }
                    </table>
                </div>
            </div>
             
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
